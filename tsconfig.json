{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "paths": {
            "shared/*": [
                "./shared/*"
            ],
            "client/*": [
                "./client/*"
            ],
            "server/*": [
                "./server/*"
            ],
            "games/*": [
                "./games/*"
            ]
        },
        "esModuleInterop": true,
        "lib": [
            "esnext",
            "dom",
        ],
        "strictNullChecks": true,
        "target": "ESNext",
    },
    "include": [
        "shared",
        "client",
        "server",
        "games",
        "vite.config.ts"
    ],
}